@model List<ProjectDto>
@{
    ViewData["Title"] = "Projects - Nexus";
}
<style>
    .projects li {
        width: 150px;
        display: inline-block;
        margin-right: 3px;
    }
</style>
<h4>Commercial</h4>
<ul class="projects">
    @foreach (var p in Model)
    {
        if (p.IsAvocational)
        {
            continue;
        }
        <li>
            <a asp-controller="Projects" asp-action="Details" asp-route-slug="@p.Slug">
                @if (p.ProjectPictureDtos.Any())
                {
                    <img src="@p.ProjectPictureDtos.First().FileName" alt="@p.Title" class="img-thumbnail" style="height: 150px; width: 150px;" />
                }
                else
                {
                    <img src="/images/no-thumbnail.png" alt="@p.Title" class="img-thumbnail" style="height: 150px; width: 150px;" />
                }
            </a>
        </li>
    }
</ul>

<h4>Noncommercial</h4>
<ul class="projects">
    @foreach (var p in Model)
    {
        if (!p.IsAvocational)
        {
            continue;
        }
        <li>
            <a asp-controller="Projects" asp-action="Details" asp-route-slug="@p.Slug">
                @if (p.ProjectPictureDtos.Any())
                {
                    <img src="@p.ProjectPictureDtos.First().FileName" alt="@p.Title" class="img-thumbnail" style="height: 150px; width: 150px;" />
                }
                else
                {
                    <img src="/images/no-thumbnail.png" alt="@p.Title" class="img-thumbnail" style="height: 150px; width: 150px;" />
                }
            </a>
        </li>
    }
</ul>